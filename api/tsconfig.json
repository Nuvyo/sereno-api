{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "baseUrl": "../",
    "paths": {
      "@modules/*": ["src/modules/*"],
      "@core/*": ["src/core/*"]
    }
  },
  "include": [
    "./**/*",
    "../src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}